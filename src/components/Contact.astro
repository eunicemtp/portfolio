<section class="w-[100vw] px-6 md:px-16 py-20 bg-whitey h-auto">
<!-- <section class="relative  bg-whitey py-20 px-16 w-[100vw]  h-auto left-0 "></section> -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-start">
    <!-- FORM COLUMN -->
    <div>
      <!-- TITLE -->
      <h2 class="text-h2 font-bold text-blue mb-12 relative inline-block border-b-4 border-blue">
        Contact Me
      </h2>

      <form class="flex flex-col gap-6">
        <!-- ROW 1: First + Last Name -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block font-bold mb-1">First Name</label>
            <input type="text" placeholder="Eugène" class="w-full border border-purple-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-purple-darker" />
          </div>
          <div>
            <label class="block font-bold mb-1">Last Name</label>
            <input type="text" placeholder="Béavogui" class="w-full border border-purple-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-purple-darker" />
          </div>
        </div>

        <!-- ROW 2: Email + Subject -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block font-bold mb-1">E-mail</label>
            <input type="email" placeholder="eugenebastos24@gmail.com" class="w-full border border-purple-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-purple-darker" />
          </div>
          <div>
            <label class="block font-bold mb-1">Object</label>
            <input type="text" class="w-full border border-purple-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-purple-darker" />
          </div>
        </div>

        <!-- ROW 3: Message -->
        <div>
          <label class="block font-bold mb-1">Message</label>
          <textarea rows="5" class="w-full border border-purple-300 rounded-lg p-3 resize-none focus:outline-none focus:ring-2 focus:ring-purple-darker"></textarea>
        </div>

        <!-- SUBMIT BUTTON -->
        <button type="submit" class="uppercase bg-purple-darker text-white px-10 py-3 rounded-xl mx-auto hover:bg-purple-light transition">
          Submit
        </button>
      </form>
    </div>

    <!-- AVATAR COLUMN -->
    <div class="flex justify-center md:justify-end items-start relative">
      <img src="/assets/avatar_contact.png" alt="Eunice avatar" class="w-[400px] max-w-full" />
    </div>
  </div>
</section>
