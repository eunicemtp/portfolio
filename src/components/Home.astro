---
import { translations } from '../data/lang.js';

type Lang = 'en' | 'fr';


const { lang } = Astro.props as { lang: Lang };

const t = translations[lang] || translations['en'];

console.log(t.content.home.headline);

---
    
    <h1 class="text-h1 font-bold text-blue max-w-[0ch]"><span class="text-h3">{t.content.home.headline} </span>{t.content.home.name}</h1>
    <h4 class="text-h4 text-green-dark font-inter max-w-[20ch]">{t.content.home.subheadline}</h4>
     <img src="/assets/avatar_acceuil.png" alt="" class="w-[430px] absolute right-20 top-32 -z-10" />

    
    <div class="flex gap-20 text-center mt-10 justify-center text-h5 font-jose font-bold relative mb-10">

        <!-- Exemple : une carte flip -->
        <a href="work?filter=website" class="flip-card w-[250px] h-[150px]">
            <div class="flip-inner rounded-3xl shadow-md">

            <!-- Face avant -->
            <div class="flip-front bg-beige rounded-3xl flex flex-col items-center justify-center relative">
                <span class="text-h5 font-bold text-blue z-10">{t.content.home.card.web}</span>
                <img src="/assets/website_ribbon2.png" alt="" class="absolute z-0 w-[200px]" />
            </div>

            <!-- Face arrière -->
            <div class="flip-back bg-beige  rounded-3xl flex flex-col items-center justify-center relative">
                <img src="/assets/flip_web.png" alt="" class=" z-0 w-[135px]" />
                <span class=" text-p font-bold text-blue z-10">{t.content.home.card.subtext}</span>
            </div>

            </div>
        </a>
        <a href="work?filter=poster" class="flip-card w-[250px] h-[150px]">
            <div class="flip-inner rounded-3xl shadow-md">

            <!-- Face avant -->
