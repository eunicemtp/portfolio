                <span class="text-h5 font-bold text-blue z-10">{t.content.home.card.poster}</span>
                <img src="/assets/poster_ribbon3.png" alt="" class="absolute z-0 w-[200px]" />
            </div>

            <!-- Face arrière -->
            <div class="flip-back bg-green-light rounded-3xl flex flex-col items-center justify-center relative">
                <img src="/assets/flip_poster.png" alt="" class=" z-0 w-[135px]" />
                <span class="text-p font-bold text-blue z-10">{t.content.home.card.subtext}</span>
            </div>

            </div>
        </a>
        <a href="/work?filter=hobby" class="flip-card w-[250px] h-[150px]">
            <div class="flip-inner rounded-3xl shadow-md">

            <!-- Face avant -->
            <div class="flip-front bg-purple-darker rounded-3xl flex flex-col items-center justify-center relative">
                <span class="text-h5 font-bold text-blue z-10">{t.content.home.card.hobby}</span>
                <img src="/assets/hobby_ribbon2.png" alt="" class="absolute z-0 w-[200px]" />
            </div>

            <!-- Face arrière -->
            <div class="flip-back bg-purple-darker rounded-3xl flex flex-col items-center justify-center relative">
                <img src="/assets/flip_hobby.png" alt="" class=" z-0 w-[130px]" />
                <span class="text-p font-bold text-blue z-10">{t.content.home.card.subtext}</span>
            </div>

            </div>
